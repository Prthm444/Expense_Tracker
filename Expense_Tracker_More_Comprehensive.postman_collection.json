		{
			"name": "Expenses",
			"item": [
				{
					"name": "Create Expense",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"pm.test(\"Total cost is calculated correctly\", function () {",
									"    const requestData = JSON.parse(request.data);",
									"    const responseData = pm.response.json();",
									"    pm.expect(responseData.data.totalCost).to.eql(requestData.unitPrice * requestData.quantity);",
									"    pm.collectionVariables.set(\"expenseId\", responseData.data._id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Test Expense\",\n    \"category\": \"Other\",\n    \"unitPrice\": 10,\n    \"quantity\": 2\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						}
					},
					"url": {
						"raw": "{{baseUrl}}/expense/create",
						"host": [
